# TeamFlow Enterprise Configuration

# Application
APP_NAME="TeamFlow Enterprise"
APP_VERSION="1.0.0"
NODE_ENV="development"
DEBUG="false"

# Server
PORT="3001"
HOST="0.0.0.0"
CORS_ORIGINS="http://localhost:3000,https://team-flow-alpha.vercel.app"
CORS_CREDENTIALS="true"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/teamflow"
DB_MAX_CONNECTIONS="100"
DB_SSL="false"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_CLUSTER="false"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"
SSO_ENABLED="false"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# AI Configuration
AI_ENABLED="true"
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"

# File Storage
STORAGE_PROVIDER="local"
S3_BUCKET=""
S3_REGION=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""

# Email
EMAIL_ENABLED="true"
EMAIL_PROVIDER="smtp"
EMAIL_FROM="noreply@teamflow.com"
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Monitoring
LOG_LEVEL="info"
ENABLE_METRICS="true"

# Integrations
SLACK_ENABLED="false"
SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
SLACK_BOT_TOKEN=""

GITHUB_INTEGRATION_ENABLED="false"
GITHUB_INTEGRATION_CLIENT_ID=""
GITHUB_INTEGRATION_CLIENT_SECRET=""

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"